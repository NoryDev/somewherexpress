<div class="container padded-mini">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>

      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <%= f.input :email %>

        <%= f.button :submit, t('.send_me_reset_password_instructions', :default => "Send me reset password instructions") %>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
