<div class="container padded-medium">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong><%= t('.forgot_your_password', default: 'Forgot your password?') %></strong>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <%= f.input :email %>

            <%= f.button :submit, t('.send_me_reset_password_instructions', default: "Send me reset password instructions"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
