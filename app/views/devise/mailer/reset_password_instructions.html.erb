<% require "devise/version" %>

<!-- body -->
<table class="body-wrap" bgcolor="#f6f6f6">
  <tr>
    <td></td>
    <td class="container">

      <!-- content -->
      <div class="content">
      <table class="main" width="100%" cellpadding="0" cellspacing="0">
        <tr>
          <td class="alert alert-bad">
            <img src="https://www.somewherexpress.com/mstile-144x144.png" alt="" height="26px" width="26px" style="display: inline-block; width: 26px; vertical-align: top"><a href="https://www.somewherexpress.com">SomewherExpress</a>
          </td>
        </tr>
        <tr>
          <td class="message" bgcolor="#FFFFFF">
            <h3><%= t('.greeting', recipient: @resource.first_name, default: "Hello #{@resource.first_name}!") %></h3>

            <p><%= t('.instruction', default: "Someone has requested a link to change your password, and you can do this through the link below.") %></p>

            <!-- button -->
            <table class="btn-primary" cellpadding="0" cellspacing="0" border="0">
              <tr>
                <td>
                  <%= link_to t('.action', default: "Change my password"), edit_password_url(@resource, reset_password_token: (Devise::VERSION.start_with?('3.') ? @token : @resource.reset_password_token)) %>
                </td>
              </tr>
            </table>
            <!-- /button -->

            <p><%= t('.instruction_2', default: "If you didn't request this, please ignore this email.") %></p>
            <p><%= t('.instruction_3', default: "Your password won't change until you access the link above and create a new one.") %></p>
          </td>
        </tr>
      </table>
      </div>
      <!-- /content -->

    </td>
    <td></td>
  </tr>
</table>
<!-- /body -->

<!-- footer -->
<table class="footer-wrap">
  <tr>
    <td></td>
    <td class="container">

      <!-- content -->
      <div class="content">
        <table>
          <tr>
            <td align="center">
              <p>Retrouve SomewherExpress: <a href="https://www.facebook.com/somewherexpress/">facebook</a></p>
            </td>
          </tr>
        </table>
      </div>
      <!-- /content -->

    </td>
    <td></td>
  </tr>
</table>
<!-- /footer -->
