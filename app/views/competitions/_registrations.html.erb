<% if competition.registrations_open? %>
  <div class="separator padded-micro"></div>
  <p>
    <span class="text-uppercase small"><%= t('competitions.registrations.message') %></span><span class="text-uppercase label label-success"><%= t('competitions.open', count: 2) %></span>
  </p>
  <div class="text-uppercase small">
    <%= t('competitions.registrations.end', time: distance_of_time_in_words(competition.end_registration || (competition.start_date - 1), Time.now)) %>:
    <%= (datetime_format(competition.end_registration) || datetime_format(competition.start_date - 1)) %>
  </div>
<% elsif competition.before_registrations? %>
  <div class="separator padded-micro"></div>
  <p>
    <span class="text-uppercase small"><%= t('competitions.registrations.message') %></span><span class="text-uppercase label label-success"><%= t('competitions.open', count: 2) %></span>
  </p>
  <div class="text-uppercase small">
    <%= t('competitions.registrations.start', time: distance_of_time_in_words(competition.start_registration, Time.now)) %>:
    <%= datetime_format(competition.start_registration) %>
  </div>
<% elsif competition.after_registrations? %>
  <div class="separator padded-micro"></div>
  <p>
    <span class="text-uppercase small"><%= t('competitions.registrations.message') %></span><span class="text-uppercase label label-danger"><%= t('competitions.closed', count: 2) %></span>
  </p>
<% end %>