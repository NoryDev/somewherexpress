<% if @form.errors.any? %>
  // Render new review form with errors
  $("#modal-content-sub-<%= @form.id %>").html("<%= j render 'subscriptions/process', subscription: @form, competition: @competition, user: @form.user %>");
<% else %>
  $("#modal-sub-<%= @form.id %>").modal('hide');

  <% if current_user.pending_registrations_for_creations > 0 %>
    $('.registrations-alert').html("<%= current_user.pending_registrations_for_creations %>");
  <% else %>
    $('.registrations-alert').hide();
  <% end %>

  <% if @form.status == "accepted" %>
    $("#panel-<%= @competition.id %> .users-area").append("<%= j render 'users/avatar_small', user: @form.user %>")

    $("#competition-<%= @competition.id %>-user-<%= @form.user.id %> .edit-form").remove();
    $("#competition-<%= @competition.id %>-user-<%= @form.user.id %> .status").html('<i class="fa fa-check text-success cursor-default flex-item" data-toggle="tooltip" data-placement="bottom" title="<%= t("subscriptions.accepted_short") %>"></i>');
    $('[data-toggle="tooltip"]').tooltip();
  <% elsif @form.status == "refused" %>
    $("#panel-<%= @competition.id %> .users-area").append("<%= j render 'users/avatar_small', user: @form.user %>")

    $("#competition-<%= @competition.id %>-user-<%= @form.user.id %> .edit-form").remove();
    $("#competition-<%= @competition.id %>-user-<%= @form.user.id %> .status").html('<i class="fa fa-times text-danger cursor-default flex-item" data-toggle="tooltip" data-placement="bottom" title="<%= t("subscriptions.refused_short") %>"></i>');
    $('[data-toggle="tooltip"]').tooltip();
  <% end %>
<% end %>
